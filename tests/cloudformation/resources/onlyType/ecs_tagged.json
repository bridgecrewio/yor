{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Sample EBS Volume with EC2 instance template",
  "Resources": {
    "NewVolume": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Tags": [
          {
            "Key": "new_tag",
            "Value": "new_value"
          }
        ],
        "Encrypted": true,
        "AvailabilityZone": "us-west-2a"
      }
    },
    "ECSCluster": {
      "Properties": {
        "Tags": [
          {
            "Key": "new_tag",
            "Value": "new_value"
          }
        ]
      },
      "Type": "AWS::ECS::Cluster"
    }
  }
}